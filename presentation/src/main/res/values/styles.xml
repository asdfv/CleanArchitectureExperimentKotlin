<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="note_label_style">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="note_input_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/whitish</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="toolbar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <dimen name="toolbar_height">50dp</dimen>

    <style name="toolbar_image">
        <item name="android:layout_width">@dimen/toolbar_height</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="details_label" parent="wrap_content">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="details_text" parent="wrap_content">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="details_edit_text" parent="details_text">
        <item name="android:inputType">none</item>
        <item name="android:enabled">false</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
    </style>

</resources>
